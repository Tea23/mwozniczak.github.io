@require 'mixins/*'

html, body
	height 100%
	font-family 'Exo 2'
	
h1
	font-weight 900
	margin-bottom 0

h2
	font-weight 600
	
h3
	font-weight 400

h4
	font-weight 400
	
// based on: https://css-tricks.com/perfect-full-page-background-image/
cover(imgaddr)
	background: url(imgaddr) no-repeat center center fixed
	-webkit-background-size cover
	-moz-background-size cover
 	-o-background-size cover
	background-size cover
	// filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='.myBackground.jpg', sizingMethod='scale')
	// -ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='myBackground.jpg', sizingMethod='scale')"
		
inner_shadow(args)
	-moz-box-shadow: inset args
	-webkit-box-shadow: inset args
	box-shadow: inset args

#topHeader
	// background #009999
	// background #063A77
	background-linear-gradient(top, #063A77, 25%, #a5c300, 100%)
	color white
	// cover('../imgs/bg.JPG')
	inner_shadow(0 0 500px black)
	width: 100%
	min-height 100%

.layer
	width 100%
	height 100%
	background-position: 0px 0px
	min-height 635px
	background-blend-mode: hard-light
	
#topLayer1
	// cover('../imgs/bokeh-l.png')
	cover('../imgs/bokeh-lg.png')

#topLayer2
	cover('../imgs/bokeh-l.png')

#topLayer3
	cover('../imgs/bokeh-m.png')
	
#topLayer4
	cover('../imgs/bokeh-s.png')

#name
	text-align center
	padding-top 5em
	padding-bottom 5em

.workExp
	padding 1em
	margin-bottom 1em

.workExp:hover
	background #efe
	
.workExp .employer
	margin-bottom 1em
	margin-left -1em

@media only screen and (min-width: 550px) 
	#topContent
		width 100%
		bottom 0
	
	.workExp .employer
		border-right 1px solid #bab
		margin-left 0

@media only screen and (min-height: 600px)
	// #topContent
	// 	position absolute
	#topHeader
		min-height: 100%

