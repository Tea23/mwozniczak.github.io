@require 'mixins/*'

html, body
	height 100%
	font-family 'Exo 2'
	
h1
	font-weight 900
	margin-bottom 0

h2
	font-weight 600
	
h3
	font-weight 400

h4
	font-weight 400
	
// based on: https://css-tricks.com/perfect-full-page-background-image/
cover(imgaddr)
	background: url(imgaddr) no-repeat center center fixed
	-webkit-background-size cover
	-moz-background-size cover
 	-o-background-size cover
	background-size cover
	// filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='.myBackground.jpg', sizingMethod='scale')
	// -ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='myBackground.jpg', sizingMethod='scale')"
		
inner_shadow(args)
	-moz-box-shadow: inset args
	-webkit-box-shadow: inset args
	box-shadow: inset args
	
gradient(args)
	background -moz-linear-gradient(args)
	background -webkit-linear-gradient(args)
	background -linear-gradient(args)

#topHeader
	// background #009999
	// background #063A77
	background none
	// cover('../imgs/bg.JPG')
	width: 100%
	z-index 100
	
@media only screen
	#topHeader
		min-height 100%
		color white
	
#topBG
	position: absolute
	z-index 0
	inner_shadow(0 0 500px black)
	// gradient(#009999, #063A77)
		
@media only print
	canvas
		display: none

#name
	text-align center
	z-index 100

@media only screen
	#name
		padding-top 5em
		padding-bottom 5em

	.workExp
		padding 1em
		margin-bottom 1em

	.workExp .employer
		margin-bottom 1em
		margin-left -1em
		
@media only print
	.responsibilities li
		page-break-inside avoid

.workExp:hover
	background #efe

@media only screen and (min-width: 550px) 
	#topContent
		width 100%
		bottom 0
	
	.workExp .employer
		border-right 1px solid #bab
		margin-left 0

@media only screen and (min-height: 600px)
	#topHeader
		min-height: 100%

.testimonialSet
	text-align center
	background-color rgba(0, 0, 0, 0.2)
	padding 1em
	
@media only screen
	.testimonialSet
		margin-bottom 2em
		color white
		
@media only print
	.testimonialSet .columns
		page-break-inside avoid
	
.testimonialContent
	font-style italic
	font-weight 600
	margin-bottom 1em
		
.testimonialCaption
	text-align right
	
@media only print
	.testimonialContent
		float left
		width 60%
	.testimonialCaption
		float right
		width 40%
		
	#education
		page-break-inside avoid

.wideHeader
	background #C41100
	color white
	text-align center
	margin-bottom 1em
	padding-top 1em

@media only print
	.wideHeader
		float none

.wideHeader h2
	page-break-before always
	
#footer
	margin-top 1em
	margin-bottom 0
	text-align center
	padding-bottom 1em
	background #063A77
	
li.knownTech
	display inline
	font-weight bold
	font-variant small-caps

.knownTech.expert
	color #522
	
.knownTech.intermediate
	color #552
	
.knownTech.basics
	color #777
	
.noPagebreak_lame
	page-break-inside avoid